# This is the top-most .editorconfig file (do not search in parent directories)
root = true

### All files
[*]
# Force charset utf-8
charset = utf-8

# Indentation
indent_style = space
indent_size = 2

# line breaks and whitespace
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 250
tab_width = 2

### Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

### YAML
[*.yml]
indent_style = space
indent_size = 2

### Specific files
[{package,bower}.json]
indent_style = space
indent_size = 2